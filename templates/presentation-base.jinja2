<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>{% block title %} {% endblock %}</title>

        <meta name="description" content="{% block description %} {% endblock %}">
        <meta name="author" content="{% block author %} {% endblock %}">

        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <link rel="stylesheet" href="{{ url_for('static', filename='reveal/css/reveal.min.css') }}">
        <link rel="stylesheet" href="{{ url_for('static', filename='reveal/css/theme/default.css') }}" id="theme">

        <!-- For syntax highlighting -->
        <link rel="stylesheet" href="{{ url_for('static', filename='reveal/lib/css/zenburn.css') }}">

        <!-- If the query includes 'print-pdf', use the PDF print sheet -->
        <script>
            document.write( '<link rel="stylesheet" href="{{ url_for('static', filename='reveal/css/print/') }}' + ( window.location.search.match( /print-pdf/gi ) ? 'pdf' : 'paper' ) + '.css" type="text/css" media="print">' );
        </script>

        <!--[if lt IE 9]>
            <script src="{{ url_for('static', filename='reveal/lib/js/html5shiv.js') }}"></script>
        <![endif]-->

        {% block head %} {% endblock %}
    </head>

    <body>
        <div class="reveal">
            <!-- Any section element inside of this container is displayed as a slide -->
            <div class="slides">
                {% block slides %}

                {% endblock %}
            </div>
        </div>

        <script src="{{ url_for('static', filename='reveal/lib/js/head.min.js') }}"></script>
        <script src="{{ url_for('static', filename='reveal/js/reveal.min.js') }}"></script>

        {% block scripts %} {% endblock %}

        <script>
            // Full list of configuration options available here:
            // https://github.com/hakimel/reveal.js#configuration
            Reveal.initialize({
                controls: true,
                progress: true,
                history: true,
                center: true,

                theme: Reveal.getQueryHash().theme, // available themes are in /css/theme
                transition: Reveal.getQueryHash().transition || 'default', // default/cube/page/concave/zoom/linear/fade/none

                // Optional libraries used to extend on reveal.js
                dependencies: [
                    { src: '{{ url_for('static', filename='reveal/lib/js/classList.js') }}', condition: function() { return !document.body.classList; } },
                    { src: '{{ url_for('static', filename='reveal/plugin/markdown/showdown.js') }}', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
                    { src: '{{ url_for('static', filename='reveal/plugin/markdown/markdown.js') }}', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
                    { src: '{{ url_for('static', filename='reveal/plugin/highlight/highlight.js') }}', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
                    { src: '{{ url_for('static', filename='reveal/plugin/zoom-js/zoom.js') }}', async: true, condition: function() { return !!document.body.classList; } },
                    { src: '{{ url_for('static', filename='reveal/plugin/notes/notes.js') }}', async: true, condition: function() { return !!document.body.classList; } }
                    // { src: '{{ url_for('static', filename='reveal/plugin/search/search.js') }}', async: true, condition: function() { return !!document.body.classList; } }
                    // { src: '{{ url_for('static', filename='reveal/plugin/remotes/remotes.js') }}', async: true, condition: function() { return !!document.body.classList; } }
                ]
            });
        </script>
    </body>
</html>